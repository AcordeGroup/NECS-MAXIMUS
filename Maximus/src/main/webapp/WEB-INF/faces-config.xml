<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/MaximusBundle</base-name>
            <var>maximusBundle</var>
        </resource-bundle>
        <navigation-handler>org.primefaces.mobile.application.MobileNavigationHandler</navigation-handler>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
    
    <navigation-rule>
        <from-view-id>/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>purchasing</from-outcome>
            <to-view-id>/purchasing/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sales</from-outcome>
            <to-view-id>/sales/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>purchasing</from-outcome>
            <to-view-id>/purchasing/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sales</from-outcome>
            <to-view-id>/sales/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>sales/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Edit</from-outcome>
            <to-view-id>quoteEdit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>See</from-outcome>
            <to-view-id>quoteView.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Resent</from-outcome>
            <to-view-id>quoteResent.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
